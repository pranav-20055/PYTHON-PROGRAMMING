grade = input("Enter the grade of the employee: ")
salary = float(input("Enter the employee salary: "))

if grade == "A":
    bonus = salary * 0.05
elif grade == "B":
    bonus = salary * 0.10
else:
    bonus = 0

if salary < 10000:
    bonus += salary * 0.02

print("Salary =", salary)
print("Bonus =", bonus)
print("Total to be paid:", salary + bonus)
